                    input(type="hidden", name="_method", value="DELETE")
                    .badge
              .row
                .checkbox.col-xs-10
                  label
                    input(type="checkbox", value="", onchange="")
                    li.completed_false
                      span.title Finish Level 2 of FlappyApp jQuery
